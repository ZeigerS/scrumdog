<aura:component implements="forceCommunity:availableForAllPageTypes">
    <aura:attribute name="currentContact" type="Contact" />
    
    <aura:registerEvent name="toggleProfile" type="c:SendBooleanEvent"/>
    
    <section role="dialog" tabindex="-1" aria-labelledby="modal-heading-01" aria-modal="true" aria-describedby="modal-content-id-1" class="slds-modal slds-fade-in-open">
        <div class="slds-modal__container">
            <!--###### MODAL BOX BODY Part Start######-->
            
                <div class="slds-modal__content slds-p-around_medium" id="modal-content-id-1">
                    <div class="slds-grid slds-grid_vertical">
                		<div class="slds-col">
                    		<p>Username: {!v.currentContact.LastName}</p>
                		</div>
                	<div class="slds-col">
                        <div class="slds-grid slds-gutters">
                            <div class="slds-col slds-size_1-of-3">
                                <p>Age: {!v.currentContact.Age__c}</p>
                                <p>Sex: {!v.currentContact.Sex__c}</p>
                            </div>
                            <div class="slds-col slds-size_2-of-3">
                                <c:SearchHistory />
                            </div>
                        </div>
                    </div>
                    <!--###### MODAL BOX FOOTER Part Start ######-->
                    <footer class="slds-modal__footer">
                        <lightning:button variant="neutral" 
                                          label="Close"
                                          title="Close"
                                          onclick="{!c.closeModel}"/>
                    </footer>
                </div>
            </div>
        </div>
        
    </section>
    <div class="slds-backdrop slds-backdrop_open"></div>
</aura:component>