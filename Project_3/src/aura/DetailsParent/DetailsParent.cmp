<aura:component implements="forceCommunity:availableForAllPageTypes">

<!-- @AuraEnabled public Diagnosis_Search_Junc__c diagJuncObj {get; set;}
			Likelihood : percent field
				length=3 
				decimal places=2
			Chosen : checkbox 
				default value=unchecked
			
    @AuraEnabled public Diagnosis__c diagObj {get; set;} 
    		Description : Text Area (Long)
				Length = 500
				# of visible lines = 4 -->
    		
<aura:attribute name="wrapperObject" type="object" />
<aura:attribute name="symptomList" type="object[]" />

	<div class="slds-grid slds-grid_vertical">
    	<div class="slds-col slds-border_bottom">
    	<!-- header -->
        	<c:DetailsHeader percentLikely="{!v.wrapperObject.diagJuncObj.Likelihood__c}" diagName="{!v.wrapperObject.diagObj.Name}"/>
        </div>
        <div class="slds-col">
	        <div class="slds-grid ">
	        	<div class="slds-col slds-size_1-of-2">
	        	<!-- description -->
	        	<c:DetailsDescription detailDesc="{!v.wrapperObject.diagObj.Description__c}"/>
	        	</div>
	        	<div class="slds-col slds-size_1-of-2">
	        	<!-- symptoms -->
	        	<c:DetailsSymptoms symptomList="{!v.symptomList}"/>
	        	</div>
	        </div>
        </div>
        <div class="slds-col">
        	<!-- remedies -->
        	<c:DetailsRemedies remedyString="{!v.wrapperObject.diagObj.Remedies__c}"/>
        </div>
    </div>
</aura:component>